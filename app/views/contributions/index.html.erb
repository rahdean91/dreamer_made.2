<h1>Listing contributions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Challenge</th>
      <th>User</th>
      <th>Reward</th>
      <th>Contribution type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contributions.each do |contribution| %>
      <tr>
        <td><%= contribution.title %></td>
        <td><%= contribution.details %></td>
        <td><%= contribution.challenge %></td>
        <td><%= contribution.user %></td>
        <td><%= contribution.reward %></td>
        <td><%= contribution.contribution_type %></td>
        <td><%= link_to 'Show', contribution %></td>
        <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
        <td><%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contribution', new_contribution_path %>
