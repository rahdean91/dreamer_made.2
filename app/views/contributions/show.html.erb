<%- model_class = Contribution -%>
<div class="page-header">
  <h1><%=t '.title', :default => Contribution %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @contribution.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:details) %></dt>
      <dd><pre class="prettyprint"><%= @contribution.details %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reward) %></dt>
      <dd><pre class="prettyprint"><%= @contribution.reward %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contribution_type) %></dt>
      <dd><pre class="prettyprint"><%= @contribution.contribution_type %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contributions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contribution_path(@contribution), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contribution_path(@contribution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

