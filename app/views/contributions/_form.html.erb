<%= simple_form_for(@contribution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.association :challenge %>
    <%= f.association :user %>
    <%= f.input :reward %>
    <%= f.input :contribution_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
