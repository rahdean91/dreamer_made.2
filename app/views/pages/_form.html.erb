<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :goal %>
    <%= f.input :link %>
    <%= f.association :user %>
    <%= f.input :public %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
